<!DOCTYPE html>
<html>
  <head>
    <title>TodoApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="container">
        <header>
          <div class="row">
            <div class="col-sm-6">
              <h1>
                <%= link_to("Todo app", "/", class: "header-logo") %>
              </h1>
            </div>
            <div class="col-sm-6">
              <a class="header-right btn btn-primary" href="/tasks/new" role="button">新しいタスクを作成</a>
            </div>
          </div>
        </header>
      </div>
    </header>
    <div class="container main col-sm-8 col-sm-offset-2">
      <%= yield %>
    </div>
  </body>
</html>
